---
import "../style/style.css";
---

<footer>
  <section>
    <div class="logo">
      <img
        src="/img/footer_logo1.png"
        alt="SoundWheel Logo"
        class="footer-logo"
      />
    </div>
  </section>
  <section class="container">
    <div class="grid1_1">
      <div class="download_wrapper">
        <div class="Download">
          <h2>Download SoundWheel nu og prøv gratis i 14 dage.</h2>
        </div>
        <div class="img_footer">
          <a href=""
            ><img src="/img/appiconappel.png" alt="Download på App Store" /></a
          >
          <a href=""
            ><img src="/img/appicongoogle.png" alt="Hent på Google Play" /></a
          >
        </div>
      </div>
      <div>
        <div class="kontakt">
          <a href=""><h2>Kontakt</h2></a>
          <a href=""><h2>Handels- og abonnomentsbetingelser</h2></a>
          <a href=""><h2>Persondatapolitik</h2></a>
          <div class="button_footer">
            <a href=""
              ><img src="public/img/logo_cirkel.png" alt="logo" />
              <span>Tilbage til Soundwheel</span></a
            >
          </div>
        </div>
      </div>
    </div>
  </section>
</footer>

<style>
  footer {
    position: relative; /* reference for absolutte børn */
    height: 300px;
    display: grid;
    grid-template-rows: 1fr;
    grid-template-columns: 1fr 1fr;
    background-color: rgba(57, 70, 81, 1);
  }
  .grid1_1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto;
    background-color: rgba(110, 143, 162, 1);
    width: 60%;
    margin-left: 35%;
    z-index: 10;
    margin-top: 100px;
    row-gap: 10px;
  }
  .download_wrapper {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .Download {
    grid-column: 1/2;
    grid-row: 1;
    padding-top: 20px;
    padding-left: 20px;
    text-align: start;
    line-height: 3rem;
  }
  .img_footer {
    grid-column: 1/2;
    grid-row: 2;
    display: flex;
    flex-direction: column; /* ← gør at billeder stables */
    width: 50%;
    gap: 10px;
    padding-left: 20px;
    padding-bottom: 20px;
  }
  .img_footer a {
    transition: transform 0.3s ease;
  }
  .img_footer a:hover {
    transform: scale(1.1);
  }
  .kontakt {
    grid-column: 2/3;
    text-align: end;
    line-height: 3rem;
    padding-top: 20px;
    padding-right: 20px;
  }
  .kontakt a {
    text-decoration: none;
  }
  .kontakt a:hover {
    text-decoration: underline;
    text-decoration-color: #c5d4dc;
    text-decoration-thickness: 20%;
  }
  /* Style til logoet der skal overlappe */
  .footer-logo {
    position: absolute;
    z-index: 5; /* Sikrer det ligger øverst i lagene */
    width: 50%; /* Juster bredden efter behov */
    height: auto;
  }
  .container {
    position: relative;
    grid-column: 1/3;
    display: flex;
    justify-content: flex-end;
    display: inline-block;
    z-index: 10;
  }

  .button_footer {
    display: flex;
    justify-content: flex-end; /* hele containeren skubber linket til højre */
    padding: 10px; /* evt. lidt luft rundt om */
  }
  .button_footer a {
    display: inline-flex; /* flex på link */
    justify-content: flex-end; /* flyt indholdet til højre i knappen */
    align-items: center;
    gap: 10px; /* afstand mellem billede og tekst */
    padding: 10px 15px;
    text-decoration: none;
    font-weight: normal;
    border-radius: 50px;
    border: 3px solid #c5d4dc;
  }

  .button_footer a:hover {
    color: #3c4f5c;
    background-color: #c5d4dc;
    color: #3c4f5c;
  }
  .button_footer a:hover p {
    color: #3c4f5c;
  }
  .button_footer span {
    color: #c5d4dc;
    font-size: x-large;
    display: flex;
    justify-content: end;
    text-decoration: none;
  }

  .button_footer img {
    height: auto;
    width: 12%;
  }
</style>
