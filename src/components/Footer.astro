---
import "../style/style.css";
---

<footer>
  <section>
    <div class="logo">
      <img src="/img/footer_logo1.png" alt="SoundWheel Logo" class="footer-logo" />
    </div>
  </section>
  <section class="container">
    <div class="grid1_1">
      <div class="Download">
        <h2>Download SoundWheel nu og prøv gratis i 14 dage.</h2>
      </div>
      <div class="img_footer">
        <img src="img/appiconappel.png" alt="Download på App Store" />
        <img src="img/appicongoogle.png" alt="Hent på Google Play" />
      </div>

      <div class="kontakt">
        <h2>Kontakt</h2>
        <h2>Handels- og abonnomentsbetingelser</h2>
        <h2>Persondatapolitik</h2>
      </div>
    </div>
  </section>
</footer>

<style>
  footer {
    position: relative; /* reference for absolutte børn */
    height: 300px;
    display: grid;
    grid-template-rows: 1fr;
    grid-template-columns: 1fr 1fr;
    background-color: rgba(57, 70, 81, 1);
  }
  .grid1_1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    background-color: rgba(110, 143, 162, 1);
    width: 60%;
    height: 200%;
    margin-left: 35%;

    z-index: 10;
    bottom: 0;
  }
  .Download {
    grid-column: 1/2;
    justify-content:;
  }
  .img_footer {
    order: -1;
  }
  .kontakt {
    grid-column: 2/3;
    text-align: end;
  }
  /* Style til logoet der skal overlappe */
  .footer-logo {
    position: absolute;
    z-index: 5; /* Sikrer det ligger øverst i lagene */
    width: 50%; /* Juster bredden efter behov */
    height: auto;
  }
  .container {
    position: relative;
    grid-column: 1/3;
    display: flex;
    justify-content: flex-end;
    display: inline-block;
    z-index: 10;
  }
</style>
