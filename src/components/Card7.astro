---
const img = Astro.props.img;
const text = Astro.props.text;
---

<article class="faktacard">
  <div>
    <img src={img} />
    <p>{text}</p>
  </div>
</article>

<style>
  article {
    color: #3c4f5c;
  }
  .faktacard {
    background-color: #e0e8ed;
    color: #3c4f5c;
    width: 22rem;
    padding: 20px 20px 50px 20px;
    margin: 2rem 0 5rem 0;
    /* border-radius: 12px; */
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;

    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .faktacard img {
    width: 80px;
    height: auto;
  }

  .faktacard p {
    font-size: 2rem;
    line-height: 1.4;
  }
</style>
