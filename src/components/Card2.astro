---
const img = Astro.props.img;
const h1 = Astro.props.h1;
const h2 = Astro.props.h2;
const text = Astro.props.text;
const link = Astro.props.link;
---

<article>
  <div class="grid2">
    <div class="textcontent2">
      <h1>{h1}</h1>
      <h2>{h2}</h2>
      <p>{text}</p>
    </div>
    <link href={link} />
    <div class="computer">
      <img src={img} />
    </div>
  </div>
</article>

<style>
  article {
    background-color: var(--backgroundcolorcard);
  }

  .textcontent2 {
    padding-top: 100px;
    padding-left: 20px;
    padding-right: 20px;
  }

  h1 {
    font-family: var(--fontcardh1);
    font-weight: var(--fontwightcard);
    font-size: var(--fontsizecardh1);
    line-height: var(--lineheightcard);
  }
  h2 {
    font-family: var(--fontcardh1);
    font-weight: var(--fontwightcard);
    font-size: var(--fontsizecard);
    line-height: var(--lineheightcard);

    color: var(--secondary-colorcardh2);
  }
  p {
    font-family: var(--fontcardp);
    font-weight: var(--fontwightcard);
    font-size: var(--fontsizecard);
    line-height: var(--lineheightcard);
    color: var(--textcardcolor);
  }

  /* GRID */

  .computer {
    width: 100%;
    display: flex;
    position: relative;
  }

  .computer img {
    width: 100%; /* juster st√∏rrelse */
    z-index: 10;
    margin-bottom: -150px;
    padding-left: 40px;
    padding-top: 40px;
    padding-right: 40px;
  }
  .computer {
    display: grid;
  }
  .grid2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
</style>
