      font-style: oblique;
      color: rgba(223, 232, 237, 1);
      font-weight: bold;
      text-decoration: none;
    }
    .logo_wrapper {
      display: flex;
      justify-content: flex-end;
      padding: 20px;
    }
    .logo_wrapper img {
      height: 100%;
      width: 30%;
