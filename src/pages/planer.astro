  <Header />
  <body>
    <section>
      <img src="public/img/colleagues.png" alt="kollegaer" />
      <div class="planWrapper">
        <PlanCard h2text="Plan 1" text1="SoundWheel Work 100" boldText="Op til 100 brugere" prisText="9.999 kr. / år - ekskl. moms" button="Læs mere" />
